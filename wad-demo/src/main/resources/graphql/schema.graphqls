interface Human{
    name: String
}

type Course {
    id:ID!
    title:String
    description:String
    professors: [Professor]
}

type Professor implements Human{
    id:ID!
    name:String
}

type Student implements Human{
    id:ID!
    name:String
    level:Int
}

union All = Professor|Course

type Query {
    allCourses:[Course]
    allStudents:[Student]
    allProfessors:[Professor]
    allAll: [All]
    allHumans: [Human]
}

input CreateCourseInput{
    title: String
    description: String
}

#Input type for updating courses
input UpdateCourseInput{
    #ID of existing course
    id: ID!
    title: String
    description: String
}

type Mutation {
    createCourse(title: String, description: String): Course
    updateCourse(id: ID!, title: String, description: String): Course
    createCourseByInput(input: CreateCourseInput): Course
    updateCourseByInput(input: UpdateCourseInput): Course
    deleteCourse(id: ID!) : Boolean
}

schema{
    query: Query
    mutation: Mutation
}